
<%- if controller_name != 'sessions' %>
  <%= link_to "Ingresar", new_session_path(resource_name), data: { turbolinks: false }, class: "btn btn-link btn-block text-white" %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Registrarme", new_registration_path(resource_name), data: { turbolinks: false }, class: "btn btn-link btn-block text-white" %>
<% end %>

<%= link_to "Quiero registrar mi empresa", new_user_registration_path(state: 'shop'), data: { turbolinks: false }, class: "btn btn-link btn-block text-white" %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "¡Olvidé mi contraseña!", new_password_path(resource_name), data: { turbolinks: false }, class: "btn btn-link btn-block text-white" %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Solicitar confirmación", new_confirmation_path(resource_name), data: { turbolinks: false }, class: "btn btn-link btn-block text-white" %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Solicitar desbloqueo", new_unlock_path(resource_name), data: { turbolinks: false }, class: "btn btn-link btn-block text-white" %>
<% end %>
