<div class="d-lg-flex half">
  <div class="bg order-1 order-md-2" style="background: #f7fbfe url(<%= asset_path 'home_bg.jpg' %>) no-repeat 50%; background-size: contain;"></div>
  <div class="contents order-2 order-md-1">
    <div class="container">
      <div class="row align-items-center justify-content-center">
        <div class="col-md-7">
          <div class="mb-4">
            <a href="<%= root_path %>">
              <%= image_tag "quientiene_logo.png", width: "100%" %>
            </a>
            <br>
            <br>
            <p class="mb-4"></p>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="social-login">
              <%- if devise_mapping.omniauthable? %>
                <%- resource_class.omniauth_providers.each do |provider| %>
                  <%= link_to omniauth_authorize_path(resource_name, provider), class: "#{OmniAuth::Utils.camelize(provider).downcase.gsub('oauth2', '')} btn d-flex justify-content-center align-items-center", method: :post do %>
                    <span class="icon-<%= OmniAuth::Utils.camelize(provider).downcase.gsub('oauth2', '') %> mr-3"></span> Acceder con <%= OmniAuth::Utils.camelize(provider).gsub('Oauth2', '') %>
                  <% end %>
                <% end %>
              <% end %>
            </div>

            <span class="d-block text-center my-4 text-muted">&mdash; o &mdash;</span>

            <div class="form-group first">
              <%= f.label :email, "Correo electrónico" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>

            <div class="form-group last mb-3">
              <%= f.label :password, 'Constraseñña' %>
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
            </div>

            <div class="d-flex mb-5 align-items-center">
              <% if devise_mapping.rememberable? %>
                <%= f.label :remember_me, class: "control control--checkbox mb-0" do %>
                  <span class="caption">Recordarme</span>
                  <%= f.check_box :remember_me, checked: true %>
                  <div class="control__indicator"></div>
                <% end %>
              <% end %>

              <span class="ml-auto">
                <%= f.submit "Ingresar", class: "btn btn-block btn-primary" %>
              </span>
            </div>

            <%= render "devise/shared/links" %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
