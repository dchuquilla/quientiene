<div class="d-lg-flex half">
  <div class="bg order-1 order-md-2" style="background: transparent url(<%= asset_path 'home_bg.jpg' %>) no-repeat 50%; background-size: cover;"></div>
  <div class="contents order-2 order-md-1">
    <div class="container">
      <div class="row align-items-center justify-content-center">
        <div class="col-md-7">
          <div class="mb-4">
            <%= image_tag "quientiene_logo.png", width: "100%" %>
            <br>
            <br>
            <p class="mb-4"></p>
          </div>
          <form action="#" method="post">

            <div class="social-login">
              <%= link_to user_facebook_omniauth_authorize_path , class: "facebook btn d-flex justify-content-center align-items-center" do %>
                <span class="icon-facebook mr-3"></span> Acceder con Facebook
              <% end %>
              <a href="#" class="twitter btn d-flex justify-content-center align-items-center">
                <span class="icon-twitter mr-3"></span> Acceder con Twitter
              </a>
              <a href="#" class="google btn d-flex justify-content-center align-items-center">
                <span class="icon-google mr-3"></span> Acceder con Google
              </a>
            </div>

            <span class="d-block text-center my-4 text-muted">&mdash; o &mdash;</span>

            <div class="form-group first">
              <label for="username">Usuario</label>
              <input type="text" class="form-control" id="username">
            </div>
            <div class="form-group last mb-3">
              <label for="password">Contraseña</label>
              <input type="password" class="form-control" id="password">
            </div>
            <div class="d-flex mb-5 align-items-center">
              <label class="control control--checkbox mb-0"><span class="caption">Recordarme</span>
                <input type="checkbox" checked />
                <div class="control__indicator"></div>
              </label>
              <span class="ml-auto"><a href="#" class="forgot-pass">Olvidé mi contraseña</a></span>
            </div>
            <input type="submit" value="Ingresar" class="btn btn-block btn-primary">
            
          </form>
        </div>
      </div>
    </div>
  </div>
</div>