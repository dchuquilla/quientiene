<div class="row justify-content-center">
  <div class="col-md-1 col-sm-1"></div>
  <div class="col">
    <div class="row">
      <div class="col-sm-12 col-lg-9">
        <h1 class="view-title">
          <%= link_to dashboard_path, class:"btn btn-outline-dark btn-lg" do %>
            <i class="material-icons text-dark" style="top: 0;">arrow_back_ios_new</i>
          <% end %>
          <% if current_user.has_role? :customer %>
            Mis solicitudes
          <% else %>
            Solicitudes
          <% end %>
        </h1>
      </div>
      <div class="col-sm-12 col-lg-3">
        <%= search_form_for @rr_query, class: "justify-content-sm-center justify-content-lg-end" do |f| %>
          <div class="form-group">
            <%= f.search_field :short_name_or_description_or_part_number_or_vehicle_brand_or_vehicle_model_cont, class: "form-control text-dark", placeholder: "Buscar" %>
          </div>
          <% if params[:q].present? %>
            <%= link_to replacement_requests_path, data: { turbolinks: false }, class: "btn btn-white btn-raised btn-fab btn-fab-mini btn-round" do %>
              <i class="material-icons">close</i>
            <% end %>
          <% else %>
            <button type="submit" class="btn btn-white btn-raised btn-fab btn-fab-mini btn-round d-none">
              <i class="material-icons">search</i>
            </button>
          <% end %>
        <% end %>
      </div>
    </div>

    <% if current_user.has_role? :shop %>
      <div id="accordion request-filters">
        <div class="card">
          <div class="card-header p-0" id="headingTwo">
            <h5 class="mb-0">
              <button class="btn btn-link px-2 py-1 btn-block d-flex justify-content-between collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                Filtros
                <span class="material-icons m-0"> control_point </span>
              </button>
            </h5>
          </div>
          <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
            <div class="card-body p-1 p-lg-3">
              <form action="<%= replacement_requests_path %>" metho="get">
                <div class="row p-0">
                  <div class="d-flex align-items-center col-lg-1 px-lg-0 py-lg-1 col-3">Marcas</div>
                  <div class="col-lg-11 px-lg-0 py-lg-1 col-9 ">
                    <div class="btn-group-toggle" data-toggle="buttons">
                      <% @all_brands.each_with_index do |brand, index| %>
                        <% is_active_brand = params[:filters].present? && params[:filters][:brands].present? && params[:filters][:brands].include?(brand) %>
                        <label class="btn btn-outline-info px-2 py-1 <%= is_active_brand ? 'active' : '' %>">
                          <input type="checkbox" autocomplete="off" <%= is_active_brand ? 'checked' : '' %> value="<%= brand %>" name="filters[brands][]" id="filters_brands"> <%= brand.upcase %>
                        </label>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="d-flex align-items-center col-lg-1 px-lg-0 py-lg-1 col-3">AÃ±os</div>
                  <div class="col-lg-11 px-lg-0 py-lg-1 col-9 ">
                    <div class="btn-group-toggle" data-toggle="buttons">
                      <% @all_years.each_with_index do |year, index| %>
                        <% is_active_year = params[:filters].present? && params[:filters][:years].present? && params[:filters][:years].include?(year.to_s) %>
                        <label class="btn btn-outline-info px-2 py-1 <%= is_active_year ? 'active' : '' %>">
                          <input type="checkbox" autocomplete="off" <%= is_active_year ? 'checked' : '' %> value="<%= year %>" name="filters[years][]" id="filters_years"> <%= year %>
                        </label>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col p-1 p-lg-3">
                    <button type="submit" class="btn btn-block btn-info">
                      Continuar
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="row">
      <% @replacement_requests.each_with_index do |replacement_request, index| %>
        <%= render 'request_item', replacement_request: replacement_request %>
        <% if (index+1)%3 == 0 %>
          <p class="text-dark col-sm-12">
            Publicidad Aqui
          </p>
        <% end %>
      <% end %>
    </div>

    <br>

  </div>
  <div class="col-md-1 col-sm-1"></div>
</div>

<% if current_user.has_role? :customer %>
  <div class="row justify-content-center">
    <div class="col-md-1 col-sm-1"></div>
    <div class="col">
      <%= link_to new_replacement_request_path, data: { turbolinks: false }, class:"btn btn-outline-primary btn-lg btn-block" do %>
        <i class="material-icons text-dark mr-3" style="top: 0;">flare</i>
        Solicitar repuesto
      <% end %>
    </div>
    <div class="col-md-1 col-sm-1"></div>
  </div>
  <br>
<% end %>

<div class="row justify-content-center">
  <div class="col-md-1 col-sm-1"></div>
    <div class="col">
      <%= render 'home/ad_example' %>
    </div>
  <div class="col-md-1 col-sm-1"></div>
</div>