<%= form_with(model: vehicle) do |form| %>
  <% if vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
        <% vehicle.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-header card-header-warning">
      <p class="card-category">Ingrese la información del vehículo</p>
    </div>
    <div class="card-body">

      <div class="form-group">
        <%= form.label :plate, "Número de Placa", class:"bmd-label-floating" %>
        <%= form.text_field :plate, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :chasis, "Número de Chasís", class:"bmd-label-floating" %>
        <%= form.text_field :chasis, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :brand, "Marca", class:"bmd-label-floating" %>
        <%= form.text_field :brand, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :model, "Modelo", class:"bmd-label-floating" %>
        <%= form.text_field :model, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :year, "Año", class:"bmd-label-floating" %>
        <%= form.number_field :year, class:"form-control" %>
      </div>

    </div>
    <div class="card-footer">
      <div class="stats align-items-center">
        <%= form.submit 'Guardar', class:"text-info btn btn-outline-info btn-sm" %>
        &nbsp;&nbsp;
        <%= link_to 'Cancelar', vehicles_path, class:"text-danger btn btn-outline-danger btn-sm" %>
      </div>
    </div>
  </div>
<% end %>
