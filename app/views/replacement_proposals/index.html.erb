<p id="notice"><%= notice %></p>

<h1>Replacement Proposals</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Shop</th>
      <th>Name</th>
      <th>Price</th>
      <th>Original</th>
      <th>Brand</th>
      <th>Origin</th>
      <th>Life time</th>
      <th>Target</th>
      <th>Delivery time</th>
      <th>Conditions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @replacement_proposals.each do |replacement_proposal| %>
      <tr>
        <td><%= replacement_proposal.user_id %></td>
        <td><%= replacement_proposal.shop_id %></td>
        <td><%= replacement_proposal.name %></td>
        <td><%= replacement_proposal.price %></td>
        <td><%= replacement_proposal.original %></td>
        <td><%= replacement_proposal.brand %></td>
        <td><%= replacement_proposal.origin %></td>
        <td><%= replacement_proposal.life_time %></td>
        <td><%= replacement_proposal.target %></td>
        <td><%= replacement_proposal.delivery_time %></td>
        <td><%= replacement_proposal.conditions %></td>
        <td><%= link_to 'Show', replacement_proposal %></td>
        <td><%= link_to 'Edit', edit_replacement_proposal_path(replacement_proposal) %></td>
        <td><%= link_to 'Destroy', replacement_proposal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

